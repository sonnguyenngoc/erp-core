<% content_for :title do %>
    <%= @employee.code %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp.new_backend_employee_path,
        class: 'btn-sm'
    }) %>
<% end %>

<% content_for :page_title do %>
    <a href="<%= erp.backend_employees_path %>">
        <i class="fa fa-users"></i> <%= t('.employees') %>
    </a> / <%= t('.edit') %>: <%= @employee.code %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @employee.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-body">
                <%= render 'form', employee: @employee %>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>
