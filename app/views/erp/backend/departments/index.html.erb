<% content_for :title do %>
    <%= t('.departments') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-users"></i> <%= t('.departments') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp.new_backend_department_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp.list_backend_departments_path,
    keywords: [
        {
            text: t('.name'), name: 'name'
        }
    ],
    actions: [
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('.manager'), name: 'manager', value: true, checked: true
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: false
        }
    ]
) %>
