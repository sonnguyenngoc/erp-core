<% content_for :title do %>
    <%= @department.name %>
<% end %>

<% if can? :create, Erp::Department %>
    <% content_for :page_toolbar do %>
        <%= erp_component('button/create', {
            text: t('.create'),
            href: erp.new_backend_department_path,
            class: 'btn-noborder'
        }) %>
    <% end %>
<% end %>

<% content_for :page_title do %>
    <a href="<%= erp.backend_departments_path %>">
        <i class="fa fa-sitemap"></i> <%= t('.departments') %>
    </a> / <%= t('.edit') %>: <%= @department.name %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @department.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-body">
                <%= render 'form', department: @department %>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>
